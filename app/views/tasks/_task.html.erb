<%= div_for task do %>
  <li>
    <%= task.title %>
    <div class='actions'>
      <% if user_signed_in? && task.list.owner?(current_user) %>
        <%= link_to 'edit', edit_list_task_path(task.list, task), remote: true %>
        <%= link_to 'delete', [task.list, task], method: :delete, remote: true %>
      <% end %>
    </div>
  </li>
<% end %>
